<!DOCTYPE html>
<html lang="ru">
<head>
  <base href="/">
  <meta charset="UTF-8">
  <meta name="author" content="Авсюкевич Анастасия">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="keywords" content={{keywordsContent}}>
  <meta name="description" content={{descriptionContent}}>
  <title>{{titleContent}}</title>
  <link rel="icon" href="data:,"> <!-- Пустая иконка -->
  <link href="styles/general.css" rel="stylesheet" />
  <link href="{{customStyle}}" rel="stylesheet" />
  {{> shared_links}}
</head>
<body>
<div class="wrapper">
  <script defer src="src/general.js"></script>
  {{#if customScripts}}
    {{#each customScripts}}
      <script defer src="src/{{this}}.js"></script>
    {{/each}}
  {{/if}}
  {{> stick_class}}
  {{> (lookup . 'content')}}

  <!-- content  -->
    {{> line}}
    {{> footer}}

  <p class="server-time">
    Сервер: {{elapsedTime}} | Клиент: <span id="client-time"></span>
  </p>

  <script>
    const [navigation] = performance.getEntriesByType("navigation");

    if (navigation) {
      const clientTime = Math.round(navigation.duration);
      document.getElementById('client-time').textContent = `${clientTime}ms`;
    } else {
      // fallback
      const fallbackTime = Math.round(performance.now());
      document.getElementById('client-time').textContent = `${fallbackTime}ms`;
    }
  </script>
</div>
</body>
</html>